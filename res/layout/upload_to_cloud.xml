<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_gravity="center" >
    
    <LinearLayout 
        android:paddingBottom="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/cloudIcon"
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        
        <TextView 
            android:id="@+id/up_title"
            android:paddingLeft="10dp"
            android:text="Login to Ubuntu One"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        
    </LinearLayout>
    

    
     <LinearLayout 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   		<ImageView 
   		android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />     
    </LinearLayout>
    <TextView 
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:id="@+id/cloud_path"
        android:text="@string/waitWhileUploading"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     <TextView 
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/local_File"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdfgsadfg"/>
    
    <TextView 
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/cloud_File_Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdfgsadfg"/>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
   	<ProgressBar
   	    	android:padding="10dp"
            android:id="@+id/upload_Progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:progressDrawable="@drawable/progress_horizontal_holo_dark" />     
        
    </LinearLayout>
   
    
    <LinearLayout 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   		<ImageView 
   		android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />     
    </LinearLayout>
   
    <LinearLayout 
        android:padding="5dp" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button 
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/action_item_btn"
            android:layout_weight="1"
            android:id="@+id/cloud_calcel"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/cancel"/>
        
        <Button 
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/action_item_btn"
            android:layout_weight="1"
            android:id="@+id/cloud_minimise"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/minimise"/>
        
    </LinearLayout>
    
</LinearLayout>

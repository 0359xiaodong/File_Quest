<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="5dp"
     >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/popupImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_launcher_delete"
            />
        <TextView 
            android:paddingLeft="5dp"
            android:text="@string/deletefiles"
            android:id="@+id/popupTitle"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   		<ImageView 
   		android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />     
    </LinearLayout>
    
    <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_gravity="center" >
        <TextView 
            android:padding="10dp"
            android:id="@+id/textMessage"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    
        
        <TextView 
            android:visibility="gone"
            android:padding="10dp"
            android:id="@+id/textMessage2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
      
    <LinearLayout 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   		<ImageView 
   		android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />     
    </LinearLayout>
    
    <LinearLayout 
        android:paddingTop="2dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <Button 
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:onClick="onClick"
            android:id="@+id/popupOk" 
            android:layout_width="fill_parent" 
            android:layout_height="40dp" 
            android:text="@string/yes" 
            android:layout_weight="1.0" />
        <Button 
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:onClick="onClick"
            android:id="@+id/popupCancel" 
            android:layout_width="fill_parent" 
            android:layout_height="40dp" 
            android:text="@string/no" 
            android:layout_weight="1.0" />
        
    </LinearLayout>
    

</LinearLayout>
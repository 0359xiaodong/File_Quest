      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_appreance"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/setfoldericn"/>
  		</LinearLayout>	
  		
  		
  		
  		
  
  		<!-- thumbnail.... -->
  		<LinearLayout 
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="10dp"
      		android:id="@+id/thmb_set"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:layout_width="40dp"
     		    android:layout_height="40dp"
          		android:background="@drawable/thumbnail"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/thumb_loading"/>
  		</LinearLayout>
  
  		<!-- thumbnail sub menu.... -->	
  		<LinearLayout 
  		    android:visibility="gone"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/thmb_img"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView
      		    android:id="@+id/img_thmb" 
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/load_img_thumb"/>
  		</LinearLayout>
  		
  		<!-- thumbnail sub menu.... -->	
  		<LinearLayout 
      		android:visibility="gone"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/thmb_alb"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:id="@+id/alb_thmb"
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/load_music_thumb"/>
  		</LinearLayout>	
  		
  		<!-- thumbnail sub menu.... -->	
  		<LinearLayout 
  		    android:visibility="gone"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/thmb_app"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
      		    android:id="@+id/app_thmb"
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/load_app_thumb"/>
  		</LinearLayout>
  
  
  
    
  <LinearLayout 
      android:paddingBottom="5dp"
      android:background="@color/yellow"
      android:padding="5dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      <TextView 
          android:textColor="@android:color/white"
          android:textStyle="bold"
          android:text="@string/folderoptions"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
  </LinearLayout>
  
  
  		<!-- startup.... -->
  		<LinearLayout 
  		    android:layout_marginTop="5dp"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="10dp"
      		android:id="@+id/start_options"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"

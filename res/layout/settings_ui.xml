          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_startup"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/setstartpanel"/>
  		</LinearLayout>
  		
  		<!-- start up dir.... -->	
  		<LinearLayout 
  		    android:visibility="gone"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/start_dir"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_startup"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/setstartupdir"/>
  		</LinearLayout>	
  
  		
  		
  				
  
  		<!-- reset password .... -->	
  		<LinearLayout 
  		    android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="10dp"
      		android:id="@+id/reset_passwd"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/locker"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/resetmasterpassword"/>
  		</LinearLayout>
  		
  		  
  		
  		
  		
  
  		<!-- folder options.... -->
  		<LinearLayout 
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="10dp"
      		android:id="@+id/folder_options"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
      		    android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_brown_folder"/>
      
     		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/folderopt"/>
  		</LinearLayout>
  
  		<!-- hide option .... -->	
  		<LinearLayout 
  		    android:visibility="gone"
  		    android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/hide_folder"

<LinearLayout 
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
     <LinearLayout 
        android:layout_gravity="center_vertical" 
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <ImageView
             android:layout_marginTop="5dp"
             android:layout_marginLeft="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/ic_launcher_settings"
             android:layout_gravity="center"
             android:paddingRight="10dp" />
        
        <TextView 
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"/>
    </LinearLayout>
    
    <ScrollView 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
    
    <LinearLayout 
    	android:paddingLeft="5dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	  
   		<LinearLayout 
      		android:background="@color/yellow"
      		android:padding="5dp"
      		android:layout_width="fill_parent"
     	    android:layout_height="wrap_content">
      		<TextView 
         		android:textColor="@android:color/white"
          		android:textStyle="bold"
          		android:text="@string/inter"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"/>
  		</LinearLayout>
  
 
   		<!-- animation effect.... -->
  		<LinearLayout 
  		    android:layout_marginTop="5dp"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="10dp"
      		android:id="@+id/anim_effect"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
         		android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_full"/>
      
     		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/animation"/>
  		</LinearLayout>
  
  		<!-- panel animation.... -->	
  		<LinearLayout 
  		    android:visibility="gone"
  		    android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/panel_amin"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_full"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/panelanim"/>
  		</LinearLayout>
  		
  		<!-- list view animation.... -->	
  		<LinearLayout 
      		android:visibility="gone"
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="40dp"
      		android:id="@+id/la_anim"
      		android:layout_width="match_parent"
      		android:layout_height="wrap_content"
      		android:orientation="horizontal">
      
      		<ImageView 
          		android:layout_width="40dp"
          		android:layout_height="40dp"
          		android:background="@drawable/ic_launcher_full"/>
      
      		<TextView 
          		android:layout_marginLeft="10dp"
          		android:textStyle="bold"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:text="@string/listanim"/>
  		</LinearLayout>	
  		
  		<!-- appearance.... -->
  		<LinearLayout 
      		android:gravity="center_vertical"
      		android:onClick="onClick"
      		android:background="@drawable/button_click"
      		android:clickable="true"
      		android:focusable="true"
      		android:layout_marginLeft="10dp"
      		android:id="@+id/appearance"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:background="@color/black"
    android:orientation="vertical" 
    android:paddingLeft="10.0dip" 
    android:paddingRight="10.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
         
        android:orientation="horizontal" 
        android:paddingLeft="10.0dip" 
        android:paddingTop="10.0dip" 
        android:paddingRight="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:layout_weight="0.9">
       
        <ImageView 
            android:layout_gravity="center_vertical" 
            android:background="@drawable/ic_launcher_zip_it" 
            android:paddingLeft="15.0dip" 
            android:layout_width="50.0dip" 
            android:layout_height="50.0dip" />
        <TextView 
            android:textStyle="bold" 
            android:layout_gravity="center_vertical" 
            android:id="@+id/zipFileTitle" 
            android:paddingLeft="20.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/ziptype" />
    </LinearLayout>
    
    <LinearLayout 
        android:paddingLeft="15.0dip" 
        android:paddingRight="15.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        <ImageView 
            android:background="#ff33b5e5" 
            android:paddingLeft="5.0dip" 
            android:paddingRight="5.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="3.0dip" />
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="vertical" 
        android:paddingLeft="10.0dip" 
        android:paddingTop="8.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:weightSum="10.0" 
        android:layout_weight="4.0">
        <TextView 
            android:textStyle="bold" 
            android:id="@+id/zipFileName" 
            android:paddingBottom="3.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/archname" />
        <EditText 
            android:textStyle="bold" 
            android:textColor="@android:color/darker_gray" 
            android:id="@+id/getArchiveName" 
            android:background="@drawable/edit_text_focused_black" 
            android:paddingTop="3.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" />
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:layout_weight="5.5">
            <LinearLayout 
                android:orientation="vertical" 
                android:id="@+id/zipOptionLayout" 
                android:paddingTop="3.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="fill_parent">
                <TextView 
                    android:textStyle="bold" 
                    android:id="@+id/zipFormat" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="@string/options" />
                <CheckBox 
                    android:textStyle="bold" 
                    android:id="@+id/zipChioce" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:checked="false" 
                    android:button="@drawable/btn_check_holo_dark" 
                    android:text="@string/deleteafterzip" />
                <CheckBox 
                    android:textStyle="bold" 
                    android:id="@+id/tarChioce" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:checked="true" 
                    android:button="@drawable/btn_check_holo_dark" 
                    android:text="@string/keepafterzip" />
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout 
           
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:layout_weight="2.0">
            <TextView 
                android:textStyle="bold" 
                android:gravity="center_horizontal" 
                android:id="@+id/zipLoc" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:singleLine="false" 
                android:layout_weight="1.0" 
                android:textIsSelectable="false" />
        </LinearLayout>
        
        <LinearLayout 
            
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:layout_weight="2.0">
            <TextView 
                android:visibility="gone"
                android:textStyle="bold" 
                android:gravity="center_horizontal" 
                android:id="@+id/zipSize" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0" 
                android:textIsSelectable="false" />
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:layout_weight="2.0">
            <TextView 
                android:visibility="gone"
                android:textStyle="bold" 
                android:gravity="center_horizontal" 
                android:id="@+id/zipNoOfFiles" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0" 
                android:textIsSelectable="false" />
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="0.0dip" 
            android:paddingBottom="3dp"
            android:layout_weight="2.0">
            <TextView 
                android:visibility="gone"
                android:textStyle="bold" 
                android:id="@+id/zipFileLocation" 
                android:layout_width="wrap_content" 
                android:layout_height="0.0dip" 
                android:singleLine="false" 
                android:layout_weight="1.0" 
                android:textIsSelectable="false" />
        </LinearLayout>
        
    </LinearLayout>
    
    <ProgressBar 
        android:visibility="gone"
        android:id="@+id/zipProgressBar" 
        android:padding="5.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:progress="100" 
        android:progressDrawable="@drawable/progress_horizontal_holo_dark" 
        style="?android:attr/progressBarStyleHorizontal" />
    
    <LinearLayout 
        android:paddingLeft="15.0dip" 
        android:paddingRight="15.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        <ImageView 
            android:background="#ff33b5e5" 
            android:paddingLeft="5.0dip" 
            android:paddingRight="5.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="3.0dip" />
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:id="@+id/zipButtonLayout" 
        android:paddingTop="5.0dip" 
        android:paddingBottom="5.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:layout_weight="0.8">
        <Button 
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray" 
            android:id="@+id/zipOkButton" 
            android:background="@drawable/action_item_btn" 
            android:layout_width="fill_parent" 
            android:layout_height="40.0dip" 
            android:text="@string/start" 
            android:layout_weight="1.0" 
            android:onClick="onClick" />
        <Button 
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray" 
            android:id="@+id/zipCalcelButton" 
            android:background="@drawable/action_item_btn" 
            android:layout_width="fill_parent" 
            android:layout_height="40.0dip" 
            android:text="@string/cancel" 
            android:layout_weight="1.0" 
            android:onClick="onClick" />
    </LinearLayout>
</LinearLayout>
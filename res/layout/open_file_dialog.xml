<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_gravity="center"
    >
    
   
   <LinearLayout 
        android:paddingBottom="5dp"
        android:orientation="horizontal" 
        android:paddingLeft="10.0dip" 
        android:paddingTop="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        >
        
        <ImageView 
            android:id="@+id/getImage" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            />
        
        <TextView 
            android:id="@+id/open"
            android:textStyle="bold"
            android:gravity="center_vertical" 
            android:paddingLeft="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:text="@string/openwith" 
            />
    </LinearLayout>
    
    <LinearLayout 
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />
    
    <LinearLayout 
        android:paddingLeft="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:baselineAligned="false" 
        android:layout_weight="5.0">
        
        <ListView 
            android:padding="3dp"
            android:id="@+id/open_list" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:listSelector="@drawable/blue_button" 
            android:divider="#ff242424" 
            android:dividerHeight="0.5dip" 
            android:minHeight="10.0dip" />
    </LinearLayout>
    
     <LinearLayout 
        android:background="#ff33b5e5" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
        />
    
    <LinearLayout 
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
         <Button 
            android:textStyle="bold"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:id="@+id/goBack"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/goback"
            android:layout_weight="1"/>
        
        <Button 
            android:textStyle="bold"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:id="@+id/justOnce"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/ok"
            android:layout_weight="1"/>
        <Button 
            android:textStyle="bold"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:id="@+id/always"
            android:text="@string/cancel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        
    </LinearLayout>
    

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    
   
   <LinearLayout 
        android:paddingBottom="5dp"
        android:orientation="horizontal" 
        android:paddingLeft="10.0dip" 
        android:paddingTop="5.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        >
        
        <ImageView 
            android:id="@+id/launchImage"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_weight="5.0" />
        
        <TextView 
            android:id="@+id/open"
            android:textStyle="bold"
            android:gravity="center_vertical" 
            android:paddingLeft="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:text="@string/openwith" 
            android:layout_weight="1.0" />
        
        
    </LinearLayout>
    
    <LinearLayout 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   		<ImageView 
   		android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@android:color/holo_purple" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />     
    </LinearLayout>
    
    <LinearLayout 
        android:paddingLeft="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="0.0dip" 
        android:baselineAligned="false" 
        android:layout_weight="5.0">
        
        <ListView 
            android:padding="3dp"
            android:id="@+id/launch_list" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:divider="@color/black" 
            android:dividerHeight="0.5dip" 
            android:minHeight="10.0dip" />
    </LinearLayout>
    
     <LinearLayout 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
   		<ImageView 
   		android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@android:color/holo_purple" 
        android:layout_width="fill_parent" 
        android:layout_height="3.0dip" 
         />     
    </LinearLayout>
    
    <LinearLayout 
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
      
        <Button 
           
            android:textStyle="bold"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:id="@+id/justOnce"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/once"
            android:layout_weight="1"/>
        <Button 
            android:textStyle="bold"
            android:onClick="onClick"
            android:textColor="@android:color/white"
            android:background="@drawable/action_item_btn"
            android:id="@+id/always"
            android:text="@string/always"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        
    </LinearLayout>
    

</LinearLayout>
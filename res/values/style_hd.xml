<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>   
        <item name="android:textColor">@android:color/black</item>   
    </style>
    
    <!-- Theme for action Bar -->
    <style name="ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarThemeTitleStyle</item>
    </style>

    <!-- Theme for action Bar -->
    <style name="ActionBarThemeTitleStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>
    
    <!--ORANGE STYLE FOR DIALOG.... -->	
    <style name="Dialog_Orange" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!--RED STYLE FOR DIALOG.... -->	
    <style name="Dialog_Red" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/red</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!--GREY STYLE FOR DIALOG.... -->	
    <style name="Dialog_Grey" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!--GREEN STYLE FOR DIALOG.... -->	
    <style name="Dialog_Green" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/green</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!--BLUE STYLE FOR DIALOG.... -->	
    <style name="Dialog_Blue" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!--VIOLET STYLE FOR DIALOG.... -->	
    <style name="Dialog_Violet" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/violet</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    
</resources>
